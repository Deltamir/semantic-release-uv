{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "labels": [
    "dependencies"
  ],
  "baseBranchPatterns": [
    "beta"
  ],
  "pre-commit": {
    "enabled": true
  },
  "gitlabci": {
    "managerFilePatterns": [
      "/.gitlab-ci.yml/"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "semanticCommitType": "fix",
      "addLabels": [
        "automerge"
      ]
    },
    {
      "description": "Suffix (MAJOR) on major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "commitMessageSuffix": "(MAJOR)",
      "semanticCommitType": "fix",
      "addLabels": [
        "manual"
      ],
      "reviewers": [
        "Deltamir"
      ]
    }
  ]
}
